// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//individual user
model User {
  id    Int         @id @default(autoincrement())
  email String      @unique
  password String
  refresh_token String @default("")
  
  websites WebsiteUser[]
}

//user-generated websites
model WebsiteUser {
  id Int @id @default(autoincrement())
  name String
  imageUrl String
  iconUrl String
  account WebsitePassword[]

  owner User @relation(fields:[ownerId], references: [id])
  ownerId Int
}

//websites I add like google, idk
model WebsiteDefault {
  id Int @id @default(autoincrement())
  name String
  imageUrl String
  iconUrl String

  accounts WebsitePassword[]
}

//user-generated password
//allowed websiteType: user, default
model WebsitePassword {
  id Int @id @default(autoincrement())
  hashedPassword String
  websiteType String

  website WebsiteDefault? @relation(fields:[websiteId], references:[id])
  websiteId Int?

  customWebsite WebsiteUser? @relation(fields:[customWebsiteId], references:[id])
  customWebsiteId Int?
}
